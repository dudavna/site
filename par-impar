    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Document</title>
    <script>

        $x = prompt("Digite um número:")

        $y = parseInt($x)%2

        switch($y)
        {
            case 0:
                document.write(" -PAR " + $y)
                break;
                default:
                document.write(" -ÍMPAR " + $y)
                break;
        }
        
    </script>
