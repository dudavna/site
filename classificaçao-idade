    <script>
        $idade =  prompt("Qual a sua idade ?")
        $resultado = $idade

        if($idade < 12) 
        {
          $resultado = ' CRIANÇA'
        }
        else 
        
          if($idade < 21)
          { 
            $resultado = ' JOVEM'
        }
        else
         if($idade < 60)
         { 
            $resultado = ' ADULTO'
         }
        else
        {
            $resultado = ' IDOSO'
        }
                document.write("<color=''>")
                document.write(" <center> <font color='black' size='7'> Tabelas de classificação </font>")
                document.write("<table border='1' width='600' bgcolor='#ADD8E6'>")
                document.write("<tr bgcolor='#FFF0F5' align='center'>")
                document.write(" <td width='90' align='center'><B>IDADE</B></td>")
                document.write(" <td width='80' align='center'><B>CLASSIFICAÇÃO</B></td>")
                document.write(" </tr>")
                document.write(" <tr>")
                document.write("<td>")
                document.write($idade)
                document.write("</td>")
                document.write("<td>")
                document.write($resultado)
                document.write("</td>")
                document.write(" </tr>")
                document.write("</table>")

    </script>
